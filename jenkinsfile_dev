pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
 
        stage('checkout to develop') {
            steps {
                checkout scm
            }
        }

         stage('Clone from repository') {
            steps {
                git url: 'https://github.com/meghanapatel/2244_ica3.git', branch: 'develop'
            }
        }

        stage('Build and run docker image') {
            steps {
                sh 'docker build -t meghanapatel2701/2244_ica3 .'
                sh 'docker stop meghana || true && docker rm meghana || true'
                sh 'docker run --name meghana -d -p 8081:80 meghanapatel2701/2244_ica3'
            } 
        }
 
        stage('testing') {
            steps {
                sh 'curl -I 192.168.40.131:8081'
            }
        }
        stage('tagging'){
        
            steps{
                 sh 'docker tag meghanapatel2701/2244_ica3:latest meghanapatel2701/2244_ica3:latest'
                 sh "docker tag meghanapatel2701/2244_ica3:latest meghanapatel2701/2244_ica3:develop-${env.BUILD_ID}"
            }
        }
 
        stage('Push') {
            steps {
                echo 'Building..'
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-auth', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh '''
                             docker login -u ${USERNAME} -p ${PASSWORD}
                             docker push meghanapatel2701/2244_ica3:latest
                        '''
                        sh " docker push meghanapatel2701/2244_ica3:develop-${env.BUILD_ID}"
                    }
            }
        }
 
        
 
    
    }
} 


